#include <stdio.h>

int main()
{
    char string[100000];
    char letra;
    int a = 0;
    
    do {
        scanf("%c", &string[a]);   
        letra = string[a];
        a++;

    } while (letra != '\n');  
    
    printf("\nTamanaho da string: %d\n", a-1);
    
    //String normal
    printf("\nVocÃª digitou: ");
    for(int i=0; i<a-1; i++){
        printf("%c", string[i]);
    }
    
    //String invertida 
    printf("\nSua string invertida: ");
    for(int i=a-2; i>=0; i--){
        printf("%c", string[i]);
    }
    
    //String palavra por palavra
    printf("\nString palavra por palavra: \n");
    for(int i=0; i<a-1; i++){
        if(string[i]==' '){
            printf("\n");
        }else{
        printf("%c", string[i]);}
    }
    
    //String letra por letra
    printf("\nString letra por letra: ");
    for(int i=0; i<a-1; i++){
        printf("\n%c", string[i]);
    }

    return 0;
}
